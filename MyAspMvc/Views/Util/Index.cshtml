@using MyAspMvc.Controllers
@{
    ViewData["Title"] = "Утилизации";
    string[] filterList =
    {
      "Номер ТТН",
      "Утилизатор",
      "Номер акта утилизации",
    };
}
<div class="order">
  <a asp-controller="Util" asp-action="Create" class="btn btn-primary mb-5">Создать утилизацию</a>
  <div class="order__list">
    <h2 class="order__title">Список утилизаций</h2>
    <div class="view__filter my-5">
                      <h3 class="mb-1">Поиск по:</h3>
                      <div class="view__filter-search">
                        <input type="text" placeholder="Поиск" class="form-control mb-1 w-25">
                      </div>
                      <div class="view__filter-radio">
                        @foreach(var filter in filterList)
                        {
                          <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="flexRadioDefault">
                            <label class="form-check-label">
                              @filter
                            </label>
                          </div>
                        }
                      </div>
                    </div>
    <table class="order__list-table create-table table">
      <tr>
        <th>Номер ТТН</th>
        <th>Утилизатор</th>
        <th>Номер акта утилизации</th>
        <th>Дата отгрузки</th>
      </tr>
      <tr>
        <td>9432418534</td>
        <td>УтилПро</td>
        <td>41241244235</td>
        <td>21.10.2021</td>
      </tr>
    </table>
  </div>
</div>