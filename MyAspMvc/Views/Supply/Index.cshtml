@using MyAspMvc.Controllers
@{
    ViewData["Title"] = "Поставки";
    string[] filterList =
    {
      "Поставщик",
      "ТК",
      "Номер ТТН",
      "Номер платежного док.",
    };
}
<div class="order">
  <a asp-controller="Supply" asp-action="Create" class="btn btn-primary mb-5">Создать поставку</a>
  <div class="order__list">
    <h2 class="order__title">Список поставок</h2>
    <div class="view__filter my-5">
                  <h3 class="mb-1">Поиск по:</h3>
                  <div class="view__filter-search">
                    <input type="text" placeholder="Поиск" class="form-control mb-1 w-25">
                  </div>
                  <div class="view__filter-radio">
                    @foreach(var filter in filterList)
                    {
                      <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="flexRadioDefault">
                        <label class="form-check-label">
                          @filter
                        </label>
                      </div>
                    }
                  </div>
                </div>
    <table class="order__list-table create-table table">
      <tr>
        <th>Поставщик</th>
        <th>ТК</th>
        <th>Номер ТТН</th>
        <th>Номер платежного док.</th>
        <th>Стоимость поставки</th>
        <th>Дата поставки</th>
        <th>Принято</th>
        <th>Примечание</th>
      </tr>
      <tr>
        <td>МеталлТрейд</td>
        <td>ПЭК</td>
        <td>9432418534</td>
        <td>4209543534</td>
        <td>42 000</td>
        <td>21.10.2021</td>
        <td>-</td>
        <td>-</td>
      </tr>
    </table>
  </div>
</div>