@using MyAspMvc.Controllers
@{
    ViewData["Title"] = "Возвраты";
    string[] filterList =
    {
      "ТТН Заказа",
      "ТТН Возврата",
      "Номер акта возврата"
    };
}
<div class="order">
  <a asp-controller="Return" asp-action="Create" class="btn btn-primary mb-5">Создать возврат</a>
  <div class="order__list">
    <h2 class="order__title">Список возвратов</h2>
    <div class="view__filter my-5">
              <h3 class="mb-1">Поиск по:</h3>
              <div class="view__filter-search">
                <input type="text" placeholder="Поиск" class="form-control mb-1 w-25">
              </div>
              <div class="view__filter-radio">
                @foreach(var filter in filterList)
                {
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="flexRadioDefault">
                    <label class="form-check-label">
                      @filter
                    </label>
                  </div>
                }
              </div>
            </div>
    <table class="order__list-table create-table table">
      <tr>
        <th>Номер ТТН заказа</th>
        <th>Номер ТТН возврата</th>
        <th>Дата возврата</th>
        <th>Номер акта возврата</th>
        <th>Принято</th>
      </tr>
      <tr>
        <td>12173272</td>
        <td>9432418534</td>
        <td>21.10.2021</td>
        <td>41241244235</td>
        <td>Да</td>
      </tr>
    </table>
  </div>
</div>