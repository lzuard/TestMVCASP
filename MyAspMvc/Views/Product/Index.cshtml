@using MyAspMvc.Controllers
@{
    ViewData["Title"] = "Товары";
    string[] filterList =
      {
        "Артикул",
        "Наименование",
      };
}
<div class="order">
  <a asp-controller="Product" asp-action="Create" class="btn btn-primary mb-5">Создать товар</a>
  <div class="order__list">
    <h2 class="order__title">Список товаров</h2>
    <div class="view__filter my-5">
          <h3 class="mb-1">Поиск по:</h3>
          <div class="view__filter-search">
            <input type="text" placeholder="Поиск" class="form-control mb-1 w-25">
          </div>
          <div class="view__filter-radio">
            @foreach(var filter in filterList)
            {
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="flexRadioDefault">
                <label class="form-check-label">
                  @filter
                </label>
              </div>
            }
          </div>
        </div>
    <table class="order__list-table create-table table">
      <tr>
        <th>Артикул</th>
        <th>Производитель</th>
        <th>Наименование</th>
        <th>Тип товара</th>
        <th>Категория</th>
        <th>Подкатегория</th>
        <th>Вид упаковки</th>
        <th>Кол-во в упаковке</th>
        <th>Кол-во на складе</th>
        <th>Цена за единицу</th>
        <th>Мин. заказ</th>
        <th>Вес</th>
        <th>Высота</th>
        <th>Ширина</th>
        <th>Длина</th>
        <th>Описание</th>
        <th>Уценен</th>
        <th>Причина уценки</th>
      </tr>
      <tr>
        <td>31242353</td>
        <td>Sudo</td>
        <td>Арматура рифленая 6 мм А500С А3 </td>
        <td>Арматура</td>
        <td>Товары для строительства</td>
        <td>Строительные материалы</td>
        <td>Контейнер</td>
        <td>10</td>
        <td>1000</td>
        <td>200</td>
        <td>10</td>
        <td>2</td>
        <td>2</td>
