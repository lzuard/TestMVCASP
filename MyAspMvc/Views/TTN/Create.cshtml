@using MyAspMvc.Controllers
@{
    ViewData["Title"] = "Создать ТТН";
}
<div class="order__create">
    <h2 class="order__title">Создать ТТН</h2>
    
    <form class="create-form">
        <div class="row">
            <div class="col">
                <label>Номер</label>
                <select class="form-control">
                    <option>ТР-2738232</option>
                </select>
            </div>
            <div class="col">
                <label>Дата оформления</label>
                <input type="date" class="form-control">
            </div>
        </div>
        <div class="row">
                    <div class="col">
                        <label>Тип ТТН</label>
                        <select class="form-control">
                            <option>Расход</option>
                        </select>
                    </div>
