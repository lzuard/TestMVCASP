@using MyAspMvc.Controllers
@{
    ViewData["Title"] = "ТТН";
  string[] filterList =
  {
    "Номер",
    "Дата",
    "Тип ТТН",
    "Форма ТТН"
  };
}
<div class="order">
  <a asp-controller="TTN" asp-action="Create" class="btn btn-primary mb-5">Создать ТТН</a>
  <div class="order__list">
    <h2 class="order__title">Список ТТН</h2>
    <div class="view__filter my-5">
      <h3 class="mb-1">Поиск по:</h3>
      <div class="view__filter-search">
        <input type="text" placeholder="Поиск" class="form-control mb-1 w-25">
      </div>
      <div class="view__filter-radio">
        @foreach(var filter in filterList)
        {
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="flexRadioDefault">
            <label class="form-check-label">
              @filter
            </label>
          </div>
        }
      </div>
    </div>
    <table class="order__list-table create-table table">
      <tr>
        <th>Номер</th>
        <th>Дата</th>
        <th>Тип ТТН</th>
        <th>Форма ТТН</th>
      </tr>
      <tr>
        <td>ТР-272093</td>
        <td>26.06.2021</td>
        <td>Расход</td>
        <td>УТП-21</td>
      </tr>
      <tr>
        <td>ТР-273628</td>
        <td>27.06.2021</td>
        <td>Расход</td>
        <td>УТП-21</td>
      </tr>
      <tr>
        <td>117782УЭС</td>
        <td>29.06.2021</td>
        <td>Возврат</td>
        <td>Д/26</td>
      </tr>
      
      
    </table>
  </div>
</div>