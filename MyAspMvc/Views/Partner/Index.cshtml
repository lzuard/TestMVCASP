@using MyAspMvc.Controllers
@{
    ViewData["Title"] = "Контрагенты";
    string[] filterList =
    {
      "Адрес",
      "Наименование",
      "ИНН",
      "Расчетный счет"
    };
}
<div class="order">
  <a asp-controller="Partner" asp-action="Create" class="btn btn-primary mb-5">Создать контрагента</a>
  <div class="order__list">
    <h2 class="order__title">Список контрагентов</h2>
    <div class="view__filter my-5">
          <h3 class="mb-1">Поиск по:</h3>
          <div class="view__filter-search">
            <input type="text" placeholder="Поиск" class="form-control mb-1 w-25">
          </div>
          <div class="view__filter-radio">
            @foreach(var filter in filterList)
            {
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="flexRadioDefault">
                <label class="form-check-label">
                  @filter
                </label>
              </div>
            }
          </div>
        </div>
    <table class="order__list-table create-table table">
      <tr>
        <th>Тип</th>
        <th>Адрес</th>
        <th>Наименование</th>
        <th>ИНН</th>
        <th>Расчетный счет</th>
        <th>Телефон</th>
        <th>Электронная почта</th>
      </tr>
      <tr>
        <td>ТК</td>
        <td>г. Санкт-Петербург, ул. Ленина</td>
        <td>Автотрейд</td>
        <td>9432418534</td>
        <td>4209543534</td>
        <td>74722989758</td>
        <td>avtotrade@mail.ru</td>
      </tr>
    </table>
  </div>
</div>